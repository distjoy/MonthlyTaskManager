<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#fff"
    android:minWidth="400dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/nav_back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:src="@mipmap/ic_arrow_back_grey600_24dp" />


        <ImageButton
            android:id="@+id/more_task_actions"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:src="@mipmap/ic_more_vert_grey600_24dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fcfcfc"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input_no_stroke"
            android:hint="Task Title"
            android:inputType="text"
            android:lines="7"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="#777"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#ffe2e2e2"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Date" />

                <EditText
                    android:id="@+id/start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_input_no_stroke"
                    android:clickable="true"
                    android:editable="false"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffe2e2e2"
                    android:padding="10dp" />


            </LinearLayout>


            <!-- <ImageButton
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"

                 android:src="@mipmap/ic_today_white_24dp"
                 android:background="#00000000"
                 android:tint="#bebebe"
                 android:id="@+id/start_date_button"/>-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="End Date" />

                <EditText
                    android:id="@+id/end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_input_no_stroke"
                    android:clickable="true"
                    android:editable="false"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffe2e2e2"
                    android:padding="10dp" />
            </LinearLayout>
            <!--  <ImageButton
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:background="#00000000"
                  android:src="@mipmap/ic_today_white_24dp"
                  android:tint="#bebebe"
                  android:id="@+id/end_date_button"/>-->
        </LinearLayout>


        <EditText
            android:id="@+id/task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_input_no_stroke"
            android:gravity="top"
            android:hint="Task Description"
            android:inputType="textMultiLine"
            android:lines="13"
            android:padding="10dp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColor="#777"
            android:textSize="15sp"

            />

        <LinearLayout
            android:id="@+id/lower_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <!--     <TextView
                    android:id="@+id/saveOrEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SEND"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#ffc8c8c8"
                    android:layout_weight="1"
                    android:gravity="right"/> -->
            <!--<ProgressBar-->
            <!--android:id="@+id/progressBarSmall"-->
            <!--style="?android:attr/progressBarStyleSmall"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:visibility="gone"/>-->
            <ImageButton
                android:id="@+id/saveOrEdit"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#00000000"
                android:src="@mipmap/ic_check_grey600_36dp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>